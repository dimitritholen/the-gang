{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://claude-code.anthropic.com/schemas/root-manifest.json",
  "title": "Root Manifest Schema",
  "description": "Feature-level tracking manifest for Claude Code task management system",
  "type": "object",
  "required": ["version", "project", "features"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version",
      "pattern": "^[0-9]+\\.[0-9]+$",
      "default": "1.0"
    },
    "project": {
      "type": "string",
      "description": "Project name",
      "minLength": 1
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "Manifest creation timestamp"
    },
    "updated": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    },
    "features": {
      "type": "array",
      "description": "List of all features in the project",
      "items": {
        "$ref": "#/definitions/Feature"
      }
    }
  },
  "definitions": {
    "Feature": {
      "type": "object",
      "required": ["id", "slug", "title", "status", "priority", "created"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Two-digit feature ID (zero-padded)",
          "pattern": "^[0-9]{2}$"
        },
        "slug": {
          "type": "string",
          "description": "URL-safe feature identifier (lowercase, hyphen-separated)",
          "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
        },
        "title": {
          "type": "string",
          "description": "Human-readable feature title",
          "minLength": 1
        },
        "status": {
          "type": "string",
          "description": "Current feature status",
          "enum": ["NOT_STARTED", "IN_PROGRESS", "COMPLETED", "BLOCKED", "CANCELLED"]
        },
        "priority": {
          "type": "string",
          "description": "Feature priority level",
          "enum": ["CRITICAL", "HIGH", "MEDIUM", "LOW"]
        },
        "created": {
          "type": "string",
          "format": "date-time",
          "description": "Feature creation timestamp"
        },
        "updated": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp"
        },
        "taskCount": {
          "type": "integer",
          "description": "Total number of tasks in this feature",
          "minimum": 0
        },
        "completedCount": {
          "type": "integer",
          "description": "Number of completed tasks",
          "minimum": 0
        },
        "blockers": {
          "type": "array",
          "description": "List of blocking issues preventing progress",
          "items": {
            "type": "string"
          }
        },
        "tags": {
          "type": "array",
          "description": "Optional tags for categorization",
          "items": {
            "type": "string"
          }
        },
        "estimatedHours": {
          "type": "number",
          "description": "Total estimated effort in hours",
          "minimum": 0
        },
        "actualHours": {
          "type": "number",
          "description": "Actual time spent in hours",
          "minimum": 0
        }
      }
    }
  }
}
